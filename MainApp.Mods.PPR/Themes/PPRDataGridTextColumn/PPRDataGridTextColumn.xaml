<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ppr="clr-namespace:MainApp.Mods.PPR">

    <Style TargetType="{x:Type ppr:PPRDataGridTextColumn}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ppr:PPRDataGridTextColumn}">
                    <TextBox
                        HorizontalContentAlignment="{TemplateBinding HorizontalMessageAlignment}"
                        VerticalContentAlignment="{TemplateBinding VerticalMessageAlignment}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        IsReadOnly="{TemplateBinding IsReadOnly}"
                        Text="{TemplateBinding Message}" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>