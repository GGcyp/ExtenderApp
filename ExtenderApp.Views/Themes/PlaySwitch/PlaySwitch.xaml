    <Style TargetType="local:PlaySwitch">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:PlaySwitch">
                    <Grid Background="{TemplateBinding Background}">
                        <Path x:Name="Expand"
                              Width="{TemplateBinding Width}"
                              Height="{TemplateBinding Height}"
                              Fill="{TemplateBinding Fill}"
                              Stroke="{TemplateBinding Stroke}"
                              Data="{StaticResource PlayGeometry}"
                              Stretch="Uniform"/>
                    </Grid>
                    <!--<ControlTemplate.Triggers>
                    <Trigger Property="IsPaly" Value="True">
                    <Setter TargetName="Expand"  Property="Data" Value="{StaticResource PauseGeometry}"/>
                    </Trigger>
