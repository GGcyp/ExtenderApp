<local:ExtenderAppView x:Class="ExtenderApp.Views.CutsceneViews.CutsceneView"
                       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                       xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
                       xmlns:local="clr-namespace:ExtenderApp.Views"
                       xmlns:cv="clr-namespace:ExtenderApp.Views.CutsceneViews"
                       xmlns:con="clr-namespace:ExtenderApp.Views.Converters"
                       xmlns:b="clr-namespace:ExtenderApp.Views.Behaviors"
                       xmlns:t="clr-namespace:ExtenderApp.Views.Themes"
                       mc:Ignorable="d"
                       d:DataContext="{d:DesignInstance Type=cv:CutsceneViewModel}"
                       d:DesignHeight="450" d:DesignWidth="800">


    <!-- 动画定义 -->
    <local:ExtenderAppView.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/ExtenderApp.Views;component/ViewStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </local:ExtenderAppView.Resources>

    <Grid Background="Transparent">
        <i:Interaction.Behaviors>
            <b:BackgroundBehavior x:Name="backgroundBehavior"
                                  TargetColor="{StaticResource GlobalBackgroundColor}"
                                  AnimationDuration="300"/>
        </i:Interaction.Behaviors>
        <!-- 加载文本 -->
        <TextBlock Text="正在加载..."
                   FontSize="24"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Foreground="Transparent">
            <i:Interaction.Behaviors>
                <b:ForegroundBegavior x:Name="foregroundBehavior"
                                      TargetColor="{StaticResource GlobalForegroundColor}"
                                      AnimationDuration="300"/>
            </i:Interaction.Behaviors>
        </TextBlock>
    </Grid>
</local:ExtenderAppView>
