<views:ExtenderAppView x:Class="ExtenderApp.Torrents.Views.TorrentMainView"
                       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                       xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
                       xmlns:local="clr-namespace:ExtenderApp.Torrents.ViewModels"
                       xmlns:views="clr-namespace:ExtenderApp.Views;assembly=ExtenderApp.Views"
                       xmlns:vb="clr-namespace:ExtenderApp.Views.Behaviors;assembly=ExtenderApp.Views"
                       xmlns:converter="clr-namespace:ExtenderApp.Views.Converters;assembly=ExtenderApp.Views"
                       mc:Ignorable="d"
                       d:DataContext="{d:DesignInstance Type=local:TorrentMainViewModel}"
                       d:DesignHeight="600" d:DesignWidth="1400">
    <views:ExtenderAppView.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/ExtenderApp.Views;component/ViewStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <converter:NullToBoolConverter x:Key="NullToBoolConverter" />
        </ResourceDictionary>
    </views:ExtenderAppView.Resources>
    <Grid Background="{StaticResource GlobalBackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- 顶部操作栏 -->
        <Grid Grid.Row="0">
            <Button Content="添加种子文件"
                    Margin="5,0,5,0"
                    BorderBrush="Transparent"
                    HorizontalAlignment="Left"
                    Width="100"
                    Command="{Binding AddTorrentCommand}" />
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="0" >
                    <i:Interaction.Behaviors>
                        <vb:ColumnDefinitionBehavior
                            TargetWidth="350"
                            AnimationDuration="500"
                            IsVisible="{Binding Model.SelectedTorrent ,
                            Converter={StaticResource NullToBoolConverter}}"/>
                    </i:Interaction.Behaviors>
                </ColumnDefinition>
            </Grid.ColumnDefinitions>

            <!-- 第一个区域：正在下载、已完成，垃圾桶 -->
            <Border Grid.Column="0"
                    BorderBrush="{DynamicResource GlobalPrimaryBrush}"
                    BorderThickness="0 0 1 0">
                <Grid>
                    <TextBlock Text="种子状态"
                               FontSize="14"
                               Margin="5"
                               VerticalAlignment="Top"/>
                    <Button Content="正在下载"
                            Margin="0,30,0,0"
                            Height="30"
                            VerticalAlignment="Top"
                            Command="{Binding ToDownloadCommand}"/>
                    <Button Content="已完成"
                            Margin="0,70,0,0"
                            Height="30"
                            VerticalAlignment="Top"
                            Command="{Binding ToDownloadCompletedListdCommand}"/>
                    <Button Content="垃圾桶"
                            Height="30"
                            VerticalAlignment="Top"
                            Margin="0,110,0,0"/>
                </Grid>
            </Border>

            <!-- 第二个区域：种子列表 -->
            <ContentControl Grid.Column="1"
                            Content="{Binding Model.TorrentListView}"/>

            <!-- 第三个区域：文件详情界面 -->
            <Grid Grid.Column="2"
                  Background="{StaticResource GlobalBackgroundBrush}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="35" />
                    <RowDefinition Height="35" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0"
                           Background="{StaticResource GlobalBackgroundBrush}"
                           Foreground="{StaticResource GlobalForegroundBrush}"
                           Text="{Binding Model.SelectedTorrent.Name}"
                           TextWrapping="Wrap"/>
                <Border Grid.Row="1"
                        BorderBrush="{StaticResource GlobalSecondaryBrush}"
                        BorderThickness="0 0 0 1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="0"
                                Content="文件详情"
                                Margin="0"
                                BorderBrush="{DynamicResource GlobalBackgroundBrush}"
                                Command="{Binding ToFileInfoCommand}"/>
                        <Button Grid.Column="1"
                                Content="种子详情"
                                Margin="0"
                                BorderBrush="{DynamicResource GlobalBackgroundBrush}"
                                Command="{Binding ToTorrentDetailsCommand}"/>
                    </Grid>
                </Border>
                <ContentControl Grid.Row="2"
                                Margin="5 0 0 0"
                                Content="{Binding Model.TorrentDetailsView}"/>
            </Grid>
        </Grid>
    </Grid>
</views:ExtenderAppView>

