<views:ExtenderAppView x:Class="ExtenderApp.Torrents.Views.TorrentMainView"
                       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                       xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
                       xmlns:local="clr-namespace:ExtenderApp.Torrents.ViewModels"
                       xmlns:views="clr-namespace:ExtenderApp.Views;assembly=ExtenderApp.Views"
                       xmlns:vb="clr-namespace:ExtenderApp.Views.Behaviors;assembly=ExtenderApp.Views"
                       xmlns:converter="clr-namespace:ExtenderApp.Views.Converters;assembly=ExtenderApp.Views"
                       mc:Ignorable="d"
                       d:DataContext="{d:DesignInstance Type=local:TorrentMainViewModel}"
                       d:DesignHeight="600" d:DesignWidth="1000">
    <views:ExtenderAppView.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/ExtenderApp.Torrents;component/Themes/Generic.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <converter:NullToBoolConverter x:Key="NullToBoolConverter" />
        </ResourceDictionary>
    </views:ExtenderAppView.Resources>
    <Grid Background="{StaticResource GlobalBackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="35" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <!-- 顶部操作栏 -->
        <Grid Grid.Row="0">
            <Button Margin="5 5 20 0"
                    BorderBrush="Transparent"
                    HorizontalAlignment="Right"
                    Style="{DynamicResource EllipticalButton}"
                    Command="{Binding ShowAddTorrentViewCommand}">
                <Grid Background="Transparent">
                    <TextBlock Text="+"
                               Margin="5,0,35,0"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="25"/>
                    <TextBlock Text="新建"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Margin="30,0,5,0"/>
                </Grid>
            </Button>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- 第一个区域：种子状态 -->
            <Border Grid.Column="0"
                    BorderBrush="{DynamicResource GlobalPrimaryBrush}"
                    BorderThickness="0 0 1 0">
                <Grid Grid.IsSharedSizeScope="True">
                    <StackPanel  Grid.ColumnSpan="2">
                        <TextBlock Text="种子状态"
                                   FontSize="14"
                                   Margin="5"
                                   VerticalAlignment="Top"/>
                        <Button Height="30"
                                VerticalAlignment="Top"
                                Padding="10,0"
                                Command="{Binding ToDownloadListCommand}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition SharedSizeGroup="Tile" />
                                    <ColumnDefinition SharedSizeGroup="Count" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="下载中"
                                           Grid.Column="0"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding Model.DowloadTorrentCollection.Count}"
                                           Grid.Column="1"
                                           Margin="10,0,0,0"
                                           HorizontalAlignment="Right"
                                           VerticalAlignment="Center"/>
                            </Grid>
                        </Button>
                        <Button Height="30"
                                VerticalAlignment="Top"
                                Padding="10,0"
                                Command="{Binding ToDownloadCompletedListdCommand}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition SharedSizeGroup="Tile" />
                                    <ColumnDefinition SharedSizeGroup="Count" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="已完成"
                                           Grid.Column="0"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding Model.DowloadCompletedTorrentCollection.Count}"
                                           Grid.Column="1"
                                           Margin="10,0,0,0"
                                           HorizontalAlignment="Right"
                                           VerticalAlignment="Center"/>
                            </Grid>
                        </Button>
                        <Button Height="30"
                                VerticalAlignment="Top"
                                Padding="10,0"
                                Command="{Binding ToDownloadCompletedListdCommand}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition SharedSizeGroup="Tile" />
                                    <ColumnDefinition SharedSizeGroup="Count" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="做种中"
                                           Grid.Column="0"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding Model.SeedrTorrentCollection.Count}"
                                           Grid.Column="1"
                                           Margin="10,0,0,0"
                                           HorizontalAlignment="Right"
                                           VerticalAlignment="Center"/>
                            </Grid>
                        </Button>
                        <Button Height="30"
                                VerticalAlignment="Top"
                                Padding="10,0"
                                Command="{Binding ToRecyclebinListCommand}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition SharedSizeGroup="Tile" />
                                    <ColumnDefinition SharedSizeGroup="Count" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="回收站"
                                           Grid.Column="0"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding Model.RecycleBinCollection.Count}"
                                           Grid.Column="1"
                                           Margin="10,0,0,0"
                                           HorizontalAlignment="Right"
                                           VerticalAlignment="Center"/>
                            </Grid>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- 第二个区域：种子列表 -->
            <ContentControl Grid.Column="1"
                            Content="{Binding Model.TorrentListView}"/>

            <!-- 第三个区域：文件详情 Expander，向右展开 -->
            <Grid Grid.Column="2"
                  Background="{StaticResource GlobalBackgroundBrush}"
                  Width="0">
                <i:Interaction.Behaviors>
                    <vb:WidthBehavior AnimationDuration="300"
                                      TargetWidth="400"
                                      IsVisible="{Binding Model.SelectedTorrent, Converter={StaticResource NullToBoolConverter}}"/>
                </i:Interaction.Behaviors>
                <Grid.RowDefinitions>
                    <RowDefinition Height="35" />
                    <RowDefinition Height="35" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0"
                           Background="{StaticResource GlobalBackgroundBrush}"
                           Foreground="{StaticResource GlobalForegroundBrush}"
                           Text="{Binding Model.SelectedTorrent.Name}"
                           TextWrapping="Wrap"/>
                <Border Grid.Row="1"
                        BorderBrush="{StaticResource GlobalSecondaryBrush}"
                        BorderThickness="0 0 0 1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="0"
                                Content="文件详情"
                                Margin="0"
                                BorderBrush="{DynamicResource GlobalBackgroundBrush}"
                                Command="{Binding ToFileInfoCommand}"/>
                        <Button Grid.Column="1"
                                Content="种子详情"
                                Margin="0"
                                BorderBrush="{DynamicResource GlobalBackgroundBrush}"
                                Command="{Binding ToTorrentDetailsCommand}"/>
                    </Grid>
                </Border>
                <ContentControl Grid.Row="2"
                                Content="{Binding Model.TorrentDetailsView}"/>
            </Grid>
        </Grid>
    </Grid>
</views:ExtenderAppView>

