<views:ExtenderAppView x:Class="ExtenderApp.Torrents.TorrentMainView"
                       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                       xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
                       xmlns:local="clr-namespace:ExtenderApp.Torrents"
                       xmlns:views="clr-namespace:ExtenderApp.Views;assembly=ExtenderApp.Views"
                       xmlns:viewsB="clr-namespace:ExtenderApp.Views.Behaviors;assembly=ExtenderApp.Views"
                       xmlns:converter="clr-namespace:ExtenderApp.Views.Converters;assembly=ExtenderApp.Views"
                       mc:Ignorable="d"
                       d:DataContext="{d:DesignInstance Type=local:TorrentMainViewModel}"
                       d:DesignHeight="600" d:DesignWidth="1400">
    <views:ExtenderAppView.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/ExtenderApp.Views;component/ViewStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <converter:NullToBoolConverter x:Key="NullToBoolConverter" />
        </ResourceDictionary>
    </views:ExtenderAppView.Resources>
    <Grid Background="{StaticResource GlobalBackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- 顶部操作栏 -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5">
            <Button Content="添加种子文件" Margin="0,0,5,0" Click="AddTorrent" />
        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition x:Name="TorrentListColumn"
                                  Width="*" />
                <ColumnDefinition x:Name="SidebarColumn"
                                  Width="300" >
                    <i:Interaction.Behaviors>
                        <viewsB:ColumnDefinitionBehavior
                            TargetWidth="{Binding TargetWidth}"
                            AnimationDuration="500"
                            IsVisible="{Binding SelectedTorrent ,Converter={StaticResource NullToBoolConverter}}"/>
                    </i:Interaction.Behaviors>
                </ColumnDefinition>
            </Grid.ColumnDefinitions>

            <!-- 第一个区域：正在下载、已完成，垃圾桶 -->
            <StackPanel Grid.Column="0" Orientation="Vertical" Margin="5">
                <Button Content="正在下载" Margin="0,0,0,5" />
                <Button Content="已完成" Margin="0,0,0,5" />
                <Button Content="垃圾桶" />
            </StackPanel>

            <!-- 第二个区域：下载列表 -->
            <Border Grid.Column="1"
                    BorderBrush="{StaticResource GlobalSecondaryBrush}">
                <ListBox
                    Background="{StaticResource GlobalBackgroundBrush}"
                    ItemsSource="{Binding TorrentCollection}"
                    SelectedItem="{Binding SelectedTorrent}"
                    SelectionChanged="SelectionTorrentInfoChanged">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid Width="{Binding ActualWidth, ElementName=TorrentListColumn}">
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <TextBlock Grid.Row="0"
                                           Margin="5"
                                           Text="{Binding Name}"
                                           Foreground="{StaticResource GlobalForegroundBrush}"
                                           TextTrimming="CharacterEllipsis"
                                           HorizontalAlignment="Left"
                                           MaxWidth="300"/>
                                <ProgressBar Grid.Row="1"
                                             Value="50"
                                             Height="12"
                                             Margin="5"
                                             Foreground="Blue"
                                             Background="{StaticResource GlobalBackgroundBrush}"
                                             Minimum="0"
                                             Maximum="100"/>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Border>

            <!-- 第三个区域：文件详情界面 -->
            <Grid Grid.Column="2"
                  Background="{StaticResource GlobalBackgroundBrush}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="35" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0"
                           Background="{StaticResource GlobalBackgroundBrush}"
                           Foreground="{StaticResource GlobalForegroundBrush}"
                           Text="{Binding SelectedTorrent.Name}"
                           TextWrapping="Wrap"/>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="0" Content="文件详情"  BorderBrush="White"/>
                    <Button Grid.Column="1" Content="种子详情"  BorderBrush="White"/>
                </Grid>
                <ContentControl Grid.Row="2" x:Name="ViewInfoControl" DataContext="{Binding SelectedTorrent}"/>
            </Grid>
        </Grid>
    </Grid>
</views:ExtenderAppView>

