    <ScrollViewer>
        <ListBox ItemsSource="{Binding Model.PluginStore}"
                 SelectedItem="{Binding Model.CurrentModDetails}"
                 vt:ThemeProps.Background="{DynamicResource GlobalBackgroundBrush}">
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <!-- 假设 ListBox 宽度为 800，每个项宽 200（800/4=200），刚好4个一行 -->
                    <Setter Property="Width" Value="200"/>
                    <!-- 可选：设置项的高度和间距 -->
                    <Setter Property="Height" Value="120"/>
                </Style>
            </ListBox.ItemContainerStyle>
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="4"
                                 VerticalAlignment="Top"/>
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <ListBox.ItemTemplate>
                <ItemContainerTemplate>
                    <themes:PluginTab Command="{Binding DataContext,
                                      RelativeSource={RelativeSource AncestorType=ScrollViewer},
                                      Converter={vcon:GetPropertyConverter},
                                      ConverterParameter=OpenPluginCommand}"/>
                </ItemContainerTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </ScrollViewer>
</view:ExtenderAppView>
