<view:ExtenderAppView x:Class="ExtenderApp.MainViews.MainView_Run"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                      xmlns:local="clr-namespace:ExtenderApp.MainViews"
                      xmlns:view="clr-namespace:ExtenderApp.Views;assembly=ExtenderApp.Views"
                      xmlns:vm="clr-namespace:ExtenderApp.MainViews.ViewModels"
                      mc:Ignorable="d"
                      d:DataContext="{d:DesignInstance Type=vm:MainView_RunViewModel}"
                      d:DesignHeight="450" d:DesignWidth="800">
    <view:ExtenderAppView.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/ExtenderApp.Views;component/ViewStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </view:ExtenderAppView.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0"
              Background="{DynamicResource GlobalBackgroundBrush}">
            <Button Content="返回"
                    Command="{Binding ToMainViewCommand}"
                    HorizontalAlignment="Left"/>
        </Grid>
        <Grid Grid.Row="1">
            <ContentControl Content="{Binding Model.CurrentView}"/>
        </Grid>
    </Grid>
</view:ExtenderAppView>
