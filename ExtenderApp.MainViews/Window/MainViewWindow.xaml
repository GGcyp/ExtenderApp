<Window x:Class="ExtenderApp.MainViews.MainViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:ExtenderApp.MainViews"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:ExtenderApp.Views;assembly=ExtenderApp.Views"
        xmlns:vm="clr-namespace:ExtenderApp.MainViews.ViewModels"
        xmlns:con="clr-namespace:ExtenderApp.Views.Converters;assembly=ExtenderApp.Views"
        Width="1200"
        Height="800"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=vm:MianWindowViewModel}">
    <Grid>
        <ContentControl Content="{Binding Model.CurrentMainView}"/>

        <ContentControl Panel.ZIndex="1"
                        Content="{Binding Model.CurrentCutsceneView}"
                        IsHitTestVisible="{Binding Model.CurrentCutsceneView,
                        Converter={con:NullToBoolConverter}}"/>
    </Grid>
</Window>
