    <Style  TargetType="{x:Type themes:PluginTab}">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{DynamicResource GlobalForegroundBrush}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type themes:PluginTab}">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{DynamicResource GlobalPrimaryBrush}"
                            BorderThickness="1 1 1 1"
                            CornerRadius="10"
                            Width="190"
                            Height="110"
                            Margin="0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="50"/>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="20"/>
                            </Grid.RowDefinitions>

                            <Grid Margin="0 5 0 0"
                                  Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="40"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0"
                                           Text="{Binding Title}"
                                           FontSize="18"
                                           FontWeight="Bold"
                                           Margin="5 0 0 0"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Foreground="{TemplateBinding Foreground}"
                                           TextTrimming="CharacterEllipsis"/>
                                <Path Grid.Column="1"
                                      Fill="{DynamicResource GlobalForegroundBrush}"
                                      Stroke="{DynamicResource GlobalForegroundBrush}"
                                      Width="30"
                                      Height="30"
                                      Margin="0 0 10 0"
                                      Stretch="Uniform"
                                      Data="{Binding PluginIcon,
                                      Converter={con:StringGeometryConverter},
                                      ConverterParameter={StaticResource DefalutPluginIcon}}"/>
                            </Grid>

                            <TextBlock Grid.Row="1"
                                       Margin="5 5 0 0"
                                       Text="{Binding Description}"
                                       FontSize="12"
                                       Foreground="{TemplateBinding Foreground}"
                                       TextTrimming="CharacterEllipsis"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Top"
                                       TextWrapping="Wrap"/>
                            <TextBlock Grid.Row="2"
                                       Text="{Binding Version}"
                                       FontSize="10"
                                       Margin="5 0 0 5"
                                       Foreground="{TemplateBinding Foreground}"/>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>