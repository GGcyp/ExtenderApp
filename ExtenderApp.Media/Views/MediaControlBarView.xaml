<v:ExtenderAppView x:Class="ExtenderApp.Media.Views.MediaControlBarView"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                   xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                   xmlns:vm="clr-namespace:ExtenderApp.Media.ViewModels"
                   xmlns:vt="clr-namespace:ExtenderApp.Views.Themes;assembly=ExtenderApp.Views"
                   xmlns:mt="clr-namespace:ExtenderApp.Media.Themes"
                   xmlns:v="clr-namespace:ExtenderApp.Views;assembly=ExtenderApp.Views"
                   xmlns:local="clr-namespace:ExtenderApp.Media.Views"
                   mc:Ignorable="d"
                   d:DataContext="{d:DesignInstance Type=vm:MediaMainViewModel}"
                   d:DesignHeight="100"
                   d:DesignWidth="800">
    <v:ExtenderAppView.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/ExtenderApp.Media;component/Themes/Generic.xaml" />
                <ResourceDictionary Source="/ExtenderApp.Views;component/ViewStyles.xaml" />
                <ResourceDictionary Source="/ExtenderApp.Views;component/Themes/SwitchButtons/SwitchButton.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </v:ExtenderAppView.Resources>
    <StackPanel Orientation="Horizontal">
        <mt:MediaSlider x:Name="positionSlider"
                        Grid.Row="1"
                        Minimum="0"
                        Maximum="{Binding Model.TotalTime.TotalSeconds,Mode=OneWay}"
                        Value="{Binding Model.Position.TotalSeconds,Mode=OneWay}"
                        TrackHeight="5"
                        HoverTrackHeight="15"
                        ThumbSize="0"
                        ThumbColor="White"
                        TrackBackground="Transparent"
                        LeftBackground="LightBlue"
                        RightBackground="Gray"/>
        <Grid Grid.Row="2" VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="300" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <!--视频控制区-->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="{Binding Model.Position,StringFormat={}{0:hh\\:mm\\:ss}}"
                           Foreground="{DynamicResource GlobalForegroundBrush}"
                           FontSize="20" />
                <TextBlock Text="/"
                           Foreground="{DynamicResource GlobalForegroundBrush}"
                           FontSize="20" />
                <TextBlock Text="{Binding Model.TotalTime,StringFormat={}{0:hh\\:mm\\:ss}}"
                           Foreground="{DynamicResource GlobalForegroundBrush}"
                           FontSize="20" />
            </StackPanel>
            <StackPanel Grid.Column="1"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                <Button Margin="5 0 0 0"
                        Command="{Binding StopCommand}"
                        Width="35"
                        Height="35"
                        Padding="0"
                        Background="Transparent"
                        HorizontalContentAlignment="Stretch"
                        VerticalContentAlignment="Stretch">
                    <Border Background="White"
                            BorderBrush="White"
                            BorderThickness="10"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            Height="30"
                            Width="30"
                            Margin="0"
                            CornerRadius="2" />
                </Button>
                <vt:SwitchButton Command="{Binding MediaStateChangeCommand}"
                                 DefaultGeometry="{DynamicResource PlayGemetry}"
                                 TargetGeometry="{DynamicResource PauseGemetry}"
                                 Fill="White"
                                 Stroke="White"
                                 Width="60"
                                 Margin="5 0 0 0"
                                 Height="50" />
                <vt:SwitchButton Margin="10 0 0 0"
                                 Command="{Binding FastForwardCommand}"
                                 Fill="White"
                                 Stroke="White"
                                 DefaultGeometry="{DynamicResource ForwardGemetry}"
                                 TargetGeometry="{DynamicResource ForwardGemetry}"
                                 Width="30"
                                 Height="30" />
            </StackPanel>
            <mt:MediaSlider x:Name="volumeSlider"
                            Grid.Column="2"
                            Minimum="0"
                            Maximum="1"
                            Value="{Binding Model.Volume}"
                            TrackHeight="5"
                            ThumbSize="18"
                            ThumbColor="White"
                            TrackBackground="Transparent"
                            LeftBackground="LightBlue"
                            RightBackground="Gray"
                            Orientation="Horizontal"
                            TickFrequency="0.01"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch" />
        </Grid>
    </StackPanel>
</v:ExtenderAppView>