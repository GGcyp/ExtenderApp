<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:mainView="clr-namespace:ExtenderApp.MainView">

    <Style  TargetType="{x:Type mainView:ModTabButton}">
        <Setter Property="Background" Value="#20ffffff"/>
        <Setter Property="Margin" Value="6"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border Background="#20ffffff" CornerRadius="4" Padding="10" Margin="6">
                        <StackPanel>
                            <TextBlock Text="$35,996" FontSize="18" FontWeight="Bold" Foreground="#fff"/>
                            <TextBlock Text="New Users" Margin="0,5" FontSize="12"  Foreground="#fff"/>
                            <TextBlock Text="Progress" FontSize="10"  Foreground="#fff"/>
                        </StackPanel>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>